<p>
  <b>Cliente:</b>
  <%= @order.customer.name %>
</p>

<p>
  <b>Usuários:</b>
  <%= @order.user.name %>
</p>

<p>
  <b>Tipo de Pedido:</b>
  <%= @order.order_type.name unless @order.order_type == nil %>
</p>

<p>
  <b>Status:</b>
  <%= @order.order_status.name %>
</p>

<p>
  <b>Criado em:</b>
  <%= @order.created_at %>
</p>

<p>
  <b>Última Atualização:</b>
  <%= @order.updated_at %>
</p>

<p>
  <b>Paciente:</b>
  <%= @order.patient %>
</p>

<p>
  <b>Local de Entrega:</b>
  <%= @order.delivery_address %>
</p>

<p>
  <b>Data de entrega:</b>
  <%= @order.delivery_date %>
</p>
<%= render "product_orders/index", :product_orders => @order.product_orders %>

<%= link_to 'Enviar produção', new_order_production_item_path(@order), class: "btn btn-primary" unless @order.order_status.name == "Fechado" %> 
<%= link_to 'Finalizar Pedido', order_close_path(@order), :class => "btn btn-primary" unless @order.order_status.name == "Fechado"  %>

<%= link_to 'Editar', edit_order_path(@order), class: "btn" unless @order.order_status.name == "Fechado" %> |
<%= link_to 'Pedidos', orders_path, class: "btn" %> 

<section>
  <hr>
  <h4>Cupom fiscal</h4>

<%= link_to 'Com Preços', orders_coupon_path(@order, :showPrice => true), class: "btn"%> 
<%= link_to 'Sem Preços', orders_coupon_path(@order), class: "btn"%> 
</section>
