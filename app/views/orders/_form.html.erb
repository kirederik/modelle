<%= simple_form_for(@order) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <p>Cliente: <%= @order.customer.name %></p>
    <%= f.input :customer_id, :as => :hidden, :input_html => {:value => @order.customer_id} %>
    <%= f.input :user_id, :as => :hidden, :input_html => {:value => @order.user_id} %>
    <%= f.association :order_status %>
    <%= f.input :created_at %>
    <%= f.input :updated_at %>

    <% for product_order in @order.product_orders %>
      <%= fields_for "order[product_order_attributes][]", product_order do |product_order_form| %>
        <p>
          <%= product_order_form.collection_select :product_id, Product.all, :id, :name %>
          <%= product_order_form.number_field :quantity %>
        </p>
      <% end %>
    <% end %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
