<h1>Listando Pedidos</h1>

<table class="table table-hover">
  <thead>
      <tr>
        <th>Cliente</th>
        <th>Usuários</th>
        <th>Status</th>
        <th>Criado em</th>
        <th>Última atualização em</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
  </thead>

<% @orders.each do |order| %>
  <tbody>
      <tr>
        <td><%= order.customer.name %></td>
        <td><%= order.user.name %></td>
        <td><%= order.order_status.name %></td>
        <td><%= order.created_at %></td>
        <td><%= order.updated_at %></td>
        <td><%= link_to 'Fechar Pedido', order_close_path(order) %></td>
        <td><%= link_to 'Ver', order %></td>
        <td><%= link_to 'Editar', edit_order_path(order) %></td>
        <td><%= link_to 'Apagar', order, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
  </tbody>
<% end %>
</table>

<br />

<%= link_to 'Novo Pedido', new_order_path, class: "btn btn-primary" %>
