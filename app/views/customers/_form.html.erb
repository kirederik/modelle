<%= simple_form_for(@customer) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :cpf_cnpj %>
    <%= f.input :municipal_number %>
    <%= f.input :suframa %>
    <%= f.input :tribute %>
    <%= f.input :addres %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :phone1 %>
    <%= f.input :phone2 %>
    <%= f.input :fax %>
    <%= f.input :mobile %>
    <%= f.input :email %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.input :observations %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
