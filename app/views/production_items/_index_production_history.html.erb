<table class="table table-striped table-hover">
	<h4>Histórico de movimentações</h4>
  <tr>
    <th>Status origem</th>
    <th>Status destino</th>
    <th>Data de mudança</th>
  </tr>

<% @production_item.production_histories.each do |history| %>
  <tr>
    <td><%= history.status_from.name %></td>
    <td><%= history.status_to.name %></td>
    <td><%= history.created_at %></td>
  </tr>
<% end %>
</table>

