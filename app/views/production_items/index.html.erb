<h1>Listing production_items</h1>

<%= form_tag production_items_path, :class => "form-search", :method => :get do %>
  <legend>Vizualizar: </legend>
  <%= select_tag "production_status_id", options_from_collection_for_select(ProductionStatus.all, "id", "name"), :class => "input-medium search-query" %>
  <%= submit_tag "Filtrar", :class => "btn btn-primary" %>
<% end %>
<table>
  <tr>
    <th>Production status</th>
    <th>Order</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @production_items.each do |production_item| %>
  <tr>
    <td><%= production_item.production_status.name %></td>
    <td><%= production_item.order.id %></td>
    <td><%= link_to 'Show', production_item %></td>
    <td><%= link_to 'Destroy', production_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
