			<p class="text-center">Email: vendas@modelleskin.com.br</p>
			<p class="text-center">CEP: 80.230-090</p>
		</div>
	</div>

	<%= link_to 'Imprimir Ficha',
            '#',
            :id => 'printButton',
            :data => { :production_item => @production_item.id },
            :class => 'btn btn-primary' %>
</div>

<script>
    $(document).ready(function() {
        $("#printButton").click(function() {
            window.print();
            event.preventDefault();
            return false;
        });
    });

</script>