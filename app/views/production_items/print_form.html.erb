	<table class="table table-bordered table-striped">
		<thead>
      <tr>
        <th>Quantidade</th>
        <th>Referência</th>
        <th>Tamanho</th>
        <th>Cor</th>
        <th>Valor</th>
        <th>Valor total</th>
      </tr>
    </thead>
    <tbody>
    	<% @production_item.product_order_outs.each do |po| %>
    	<tr>
        <td><%= po.quantity %></td>
        <td><%= po.product.product_base.code %></td>
        <td><%= po.product.size %></td>
        <td><%= po.product.color %></td>
        <td>R$<%= po.product.product_base.price %></td>
        <td>R$<%= po.quantity * po.product.product_base.price %></td>
