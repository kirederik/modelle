<h1>Estoque de Clientes</h1>

<div class="row-fluid">
  
  <table class="table table-striped table-hover span12">
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Produto</th>
      <th>Quantidade</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  
  <tbody><% @customer_stocks.each do |customer_stock| %>
      <tr>
        <td><%= customer_stock.customer.name %></td>
        <td><%= customer_stock.product.name %></td>
        <td><%= customer_stock.quantity %></td>
        <td><%= link_to 'Ver', customer_stock %></td>
        <td><%= link_to 'Editar', edit_customer_stock_path(customer_stock) %></td>
        <td><%= link_to 'Apagar', customer_stock, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %></tbody>
  </table>
</div>


<p><%= link_to 'Atualizar cadastro de cliente', new_customer_stock_path %></p>