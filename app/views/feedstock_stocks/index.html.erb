<h1>Estoque de matéria prima</h1>

<table class="table table-stripe">
  <tr>
    <th>Matéria Prima</th>
    <th>Quantidade</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @feedstock_stocks.each do |feedstock_stock| %>
  <tr>
    <td><%= feedstock_stock.feedstock.name %></td>
    <td><%= feedstock_stock.quantity %></td>
    <td><%= link_to 'Ver', feedstock_stock, :class => "btn btn-small" %></td>
    <td><%= link_to 'Remover do estoque',  feedstock_stock_remove_from_stock_path(feedstock_stock), :class => "btn btn-small" %></td>
    <td><%= link_to 'Apagar', feedstock_stock, method: :delete, data: { confirm: 'Tem certeza?' }, :class => "btn btn-danger btn-small" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Adicionar Matéria Prima', new_feedstock_stock_path, :class => "btn btn-primary" %>
