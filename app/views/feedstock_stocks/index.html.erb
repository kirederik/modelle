<h1>Estoque de matéria prima</h1>

<table>
  <tr>
    <th>Matéria Prima</th>
    <th>Quantidade</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @feedstock_stocks.each do |feedstock_stock| %>
  <tr>
    <td><%= feedstock_stock.feedstock.name %></td>
    <td><%= feedstock_stock.quantity %></td>
    <td><%= link_to 'Ver', feedstock_stock, :class => "btn" %></td>
    <td><%= link_to 'Editar', edit_feedstock_stock_path(feedstock_stock), :class => "btn" %></td>
    <td><%= link_to 'Apagar', feedstock_stock, method: :delete, data: { confirm: 'Tem certeza?' }, :class => "btn btn-danger" %></td>
  </tr>
<% end %>
</table>

<br />

