<div id="modal_update_stock" class="modal hide fade">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Aviso</h3>
  </div>
  <div class="modal-body">
    <p id="message"></p>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-primary" data-dismiss="modal" aria-hidden="true">OK</button>
  </div>
</div>

<table class="table table-striped table-hover">
  <tr>
    <th>Pedido</th>
    <th>Produto</th>
    <th>Quantidade</th>
    <th>Status</th>
    <th>Ação</th>
  </tr>

  <% product_orders.each do |product_order| %>
    <tr>
      <td><%= product_order.order.id %></td>
      <td><%= product_order.product.name %></td>
      <td><%= product_order.quantity %></td>

      <% if product_order.status == 'estoque'%>
        <td>
          <p class="success">Utilizado estoque</p>
        </td>

        <td></td>
      <% elsif product_order.products_missing == 0 %>
        <td>
          <p class="success <%= product_order.id %>">Faltando: <%= product_order.products_missing %> </p>
          <% if product_order.status == 'producao'%>
            <p class="success <%= product_order.id %>">Já enviado produção</p>    
          <% end %>
        </td>
        <!-- <td><%= link_to 'Usar estoque', product_stocks_remove_from_stock_path(product_order), id: product_order.id, class: "btn btn-small" %>  -->
         </td>
       <% elsif product_order.status == 'producao'%>
        <td><p class="warm">Enviado Produção</p></td>
        <td><%= link_to "Ver andamento", "#", class: "btn btn-small" %></td>
      <% else %>
        <td>
          <p class="warm <%= product_order.id %>">Faltando: <%= product_order.products_missing %> </p>
        </td>
      <% end %>
      <td>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#product_order_<%= product_order.id %>">Usar estoque</button>
        <%= render "product_orders/modal", :product_order => product_order %>
        <%= link_to 'Apagar', product_order, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-danger" %>
      </td>
    </tr>
  <% end %>
</table>